<html>

<head>
  <h1>Books</h1>
</head>

<body>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <td colspan="3"></td>
      </tr>
    </thead>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
    <td>
      <%= book.title %>
    </td>
    
    <td>
      <%= book.body %>
    </td>
    
    <td>
      <%= link_to "Show", book_path(book.id) %>
    </td>
    
    <td>
      <%= link_to "Edit", edit_book_path(book.id) %>
    </td>
    
    <td>
      <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
    </td>
    </tr>
    <% end %>
  </tbody>
  </table>

<h2>New Book</h2>
  <!--エラーメッセージの設定-->
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="form">
    <%= form_with model: @book,url: '/books', method: :post do |f| %>
      <div class="newtitle">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
  
      <div class="newbody">
        <%= f.label :body %>
        <%= f.text_area :body %>
      </div>
      
      <div class="actions">
        <%= f.submit 'Create Book' %>
      </div>
    <% end %>
  </div>
  </body>
</html>